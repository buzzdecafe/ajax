{
  "name": "flajax",
  "description": "Ajax module in Vanilla JS",
  "version": "0.0.1",
  "main": "dist/ajax.min.js",
  "scripts": {
    "build": "rollup -c",
    "server": "node api",
    "test": "concurrently --kill-others --success=first 'node api/index.js' 'karma start --single-run'",
    "test:watch": "concurrently --kill-others 'node api/index.js' 'gulp'"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/buzzdecafe/flajax.git"
  },
  "keywords": [
    "ajax",
    "xmlhttprequest",
    "xhr"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/buzzdecafe/flajax/issues"
  },
  "homepage": "https://github.com/buzzdecafe/flajax",
  "standard": {
    "globals": [
      "describe",
      "it",
      "beforeEach",
      "define",
      "XMLHttpRequest"
    ]
  },
  "dependencies": {
    "data.task": "^3.1.1"
  },
  "devDependencies": {
    "body-parser": "^1.15.0",
    "chai": "^3.5.0",
    "concurrently": "^2.1.0",
    "cors": "^2.7.1",
    "express": "^4.13.4",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.0",
    "gulp-header": "^1.7.1",
    "gulp-mocha-phantomjs": "^0.11.0",
    "gulp-standardize": "^1.1.0",
    "gulp-uglify": "^1.5.3",
    "karma": "^0.13.21",
    "karma-coverage": "^0.5.4",
    "karma-es6-shim": "^1.0.0",
    "karma-mocha": "^0.2.2",
    "karma-mocha-reporter": "^1.2.3",
    "karma-phantomjs-launcher": "^1.0.0",
    "mocha": "^2.4.5",
    "multer": "^1.1.0",
    "rollup": "^0.41.6",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "standard-format": "^2.1.1"
  }
}
